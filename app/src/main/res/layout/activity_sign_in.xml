<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uno"
    tools:context=".SignIn">

    <LinearLayout
        android:id="@+id/llSignInXML"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            app:srcCompat="@drawable/cafe2" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/tvSignInXML"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registrar"
            android:textAlignment="center"
            android:textColor="@color/dos"
            android:textColorHighlight="@color/dos"
            android:textColorHint="@color/dos"
            android:textColorLink="@color/dos"
            android:textCursorDrawable="@color/dos"
            android:textSize="34sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etSignInNameXML"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/nombre"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="@color/dos"
            android:textColorHighlight="@color/dos"
            android:textColorHint="@color/dos"
            android:textColorLink="@color/dos"
            android:textCursorDrawable="@color/dos" />

        <EditText
            android:id="@+id/etSignInLastNameXML"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/apellidos"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="@color/dos"
            android:textColorHighlight="@color/dos"
            android:textColorHint="@color/dos"
            android:textColorLink="@color/dos"
            android:textCursorDrawable="@color/dos" />

        <EditText
            android:id="@+id/etSignInEmailXML"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/correo"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColor="@color/dos"
            android:textColorHighlight="@color/dos"
            android:textColorHint="@color/dos"
            android:textColorLink="@color/dos"
            android:textCursorDrawable="@color/dos" />

        <EditText
            android:id="@+id/etSignInEmailConfXML"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/correo_rep"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColor="@color/dos"
            android:textColorHighlight="@color/dos"
            android:textColorHint="@color/dos"
            android:textColorLink="@color/dos"
            android:textCursorDrawable="@color/dos" />

        <EditText
            android:id="@+id/etSignInPasswordXML"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/contraseña"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="@color/dos"
            android:textColorHighlight="@color/dos"
            android:textColorHint="@color/dos"
            android:textColorLink="@color/dos"
            android:textCursorDrawable="@color/dos" />

        <EditText
            android:id="@+id/etSignInPasswordConfXML"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/contraseña_rep"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="@color/dos"
            android:textColorHighlight="@color/dos"
            android:textColorHint="@color/dos"
            android:textColorLink="@color/dos"
            android:textCursorDrawable="@color/dos" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignInXML"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registrarse"
            android:textColor="@color/uno"
            android:textColorHighlight="@color/uno"
            android:textColorHint="@color/uno"
            android:textCursorDrawable="@color/uno"
            app:backgroundTint="@color/dos"
            app:icon="@drawable/ic_baseline_app_registration_24"
            app:iconTint="@color/uno" />

        <TextView
            android:id="@+id/tvSignInLoginXML"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:minHeight="48dp"
            android:text="@string/con_cuenta"
            android:textAlignment="center"
            android:textColor="@color/dos"
            android:textColorHighlight="@color/dos"
            android:textColorHint="@color/dos"
            android:textColorLink="@color/dos"
            android:textCursorDrawable="@color/dos"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>